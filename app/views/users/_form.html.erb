<div class="modal-dialog">
  
  <div class="modal-content">
    <%= form_for @user, remote: true, html: { style: "display:inline;" } do |f| %>
      <div class="modal-body">
        <ul class="errors"></ul>
        <table border="0" cellpadding="0" cellspacing ="0" width ="100%">
            <tbody>
              <tr>
                 <td class = "popuphd" bgcolor="#0588da" height =50 vailgn ="middle">
                     <strong>USER DETAILS</strong>
                  </td>
              </tr>
            </tbody>
           </table> </br>
           
        <div class="form-group">
          <span class="mandatory_color" style="color:red">*</span> <%= f.label :first_name, class:"control-label" %>
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <span class="mandatory_color" style="color:red">*</span> <%= f.label :last_name, class: "control-label" %>
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
        
        <div class="form-group">
         <span class="mandatory_color" style="color:red">*</span>  <%= f.label :email, class: "control-label" %>
          <%= f.text_field :email, class: "form-control" %>
        </div>
        
        <div class="form-group">
         <span class="mandatory_color" style="color:red">*</span>  <%= f.label :domain_name, class: "control-label" %>
          <%= f.text_field :domain_name, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :is_admin, class: "control-label" %>
          <%= check_box('user','is_admin') %>
        </div>
        
        <div class="form-group">
          <%= f.label :status, class: "control-label" %>
          <%= f.select :status,"<option>Active</option><option>InActive</option>".html_safe%></P>
        </div>
        
      
      <div class="modal-footer">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
      
    <% end %>
  </div>
</div>